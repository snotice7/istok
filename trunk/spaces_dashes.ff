Select("zero")
width = GlyphInfo("Width")
Select("uni2007") # figure space
SetWidth(width)
Select("endash")
width1 = GlyphInfo("Width")
if (width1 == width)
 dub_glyph.pe("endash","figuredash")
endif
dub_glyph.pe("hyphen",0u2010)
dub_glyph.pe("hyphen",0u2011)
Select("period")
