  <param name="dot-height" value="period-height"/>
  <param name="vert-stem" value="period-width"/>
  <param name="height" value="cap-o-height"/>
  <param name="x-height" value="small-x-height"/>
  
  <constant name="left" value="2"/>
  <constant name="top-left" value="left + smooth-count"/>
  <constant name="top-right" value="top-left + vstem-hcount"/>
  <constant name="right" value="top-right + smooth-count"/>
  <constant name="bottom-right" value="right + 1"/>
  <constant name="bottom-left" value="1"/>
  <constant name="period-left-bottom" value="13"/>
  <constant name="period-left-top" value="period-left-bottom + vstem-vcount"/>
  <constant name="period-right-top" value="period-left-top + vstem-hcount"/>
  <constant name="period-right-bottom" value="period-right-top + vstem-vcount"/>
  <constant name="last" value="period-right-bottom + last-count"/>
  
  <compile-if test="slanted">
   <set-freedom-vector x-component="x-skew2" y-component="y-skew2"/>
   <set-projection-vector axis="y"/>
   <!--   <set-round-state round="to-grid"/> -->
   <else>
    <set-vectors axis="y"/>
   </else>
  </compile-if>
  <compile-if test="smooth">
   <if test="vertical-smoothing">
    <set-round-state round="no"/>
   </if>
  </compile-if>
  
  <move distance="x-height">
   <point num="period-left-top"/>
   <align>
    <point num="period-right-top"/>
   </align>
   <move distance="dot-height">
    <point num="period-left-bottom"/>
    <align>
     <point num="period-right-bottom"/>
    </align>
   </move>
   <move distance="height">
    <point num="bottom-left"/>
    <align>
     <point num="bottom-right"/>
    </align>
   </move>
   <move color="white">
    <point num="top-left"/>
    <align>
     <point num="top-right"/>
    </align>
   </move>
  </move>
  
  <compile-if test="slanted">
   <set-projection-vector x-component="x-skew1" y-component="y-skew1"/>
   <set-freedom-vector axis="x"/>
   <set-round-state round="no"/>
   <else>
    <set-vectors axis="x"/>
    <compile-if test="smooth">
     <if test="vertical-smoothing">
      <set-round-state round="to-grid"/>
     </if>
    </compile-if>
   </else>
  </compile-if>
  
  <move color="white">
   <reference>
    <point num="left-bearing"/>
   </reference>
   <point num="period-left-top"/>
   <align compile-if="slanted = 0">
    <point num="left"/>
    <point num="period-left-bottom"/>
   </align>
   <move distance="vert-stem" color="black" compile-if="slanted = 0">
    <point num="period-right-top"/>
    <align>
     <point num="right"/>
     <point num="period-right-bottom"/>
    </align>
    <move min-distance="no">
     <point num="right-bearing"/>
    </move>
   </move>
  </move>
  <compile-if test="slanted">
   <set-projection-vector axis="x"/>
   <move round="to-grid">
    <point num="period-left-top"/>
   </move>
   <set-projection-vector x-component="x-skew1" y-component="y-skew1"/>
   <align>
    <reference>
     <point num="period-left-top"/>
    </reference>
    <point num="left"/>
    <point num="period-left-bottom"/>
   </align>
   <move distance="vert-stem" color="black">
    <reference>
     <point num="period-left-top"/>
    </reference>
    <point num="period-right-top"/>
    <align>
     <point num="right"/>
     <point num="period-right-bottom"/>
    </align>
    <move min-distance="no">
     <point num="right-bearing"/>
    </move>
   </move>
   <set-projection-vector axis="x"/>
   <move round="to-grid">
    <point num="right-bearing"/>
   </move>
  </compile-if>
  <compile-if test="smooth and (slanted = 0)">
   <if test="horizontal-smoothing">
    <call-macro name="shift-edge">
     <with-param name="shift" value="temp"/>
     <with-param name="cv" value="vert-stem"/>
    </call-macro>
    <shift-absolute pixel-distance="negative(temp)">
     <point num="period-left-bottom"/>
     <point num="period-left-top"/>
     <point num="left"/>
    </shift-absolute>
    <shift-absolute pixel-distance="temp">
     <point num="period-right-top"/>
     <point num="period-right-bottom"/>
     <point num="right"/>
    </shift-absolute>
   </if>
  </compile-if>
  <compile-if test="slanted">
   <set-projection-vector x-component="x-skew1" y-component="y-skew1"/>
  </compile-if>
  <interpolate>
   <reference>
    <point num="left"/>
    <point num="right"/>
   </reference>
   <point num="top-left"/>
   <point num="top-right"/>
   <point num="bottom-left"/>
   <point num="bottom-right"/>
  </interpolate>
  
  <interpolate-untouched-points/>
 </glyph>
 
</xgridfit>
