#
# This fontforge script proposed for making tnum substitutions to glyphs with ".tab" suffix
#
AddLookup("Tabular substitutions", "gsub_single", 0, [["tnum",[["cyrl",["dflt"]],["grek",["dflt"]],["latn",["dflt"]]]]])
AddLookupSubtable("Tabular substitutions", "Tabular substitutions subtable")
#Select(0u300,0u331)
SelectWorthOutputting()
foreach
 if ( WorthOutputting() )
  glyph_name = GlyphInfo("Name")
  #glyph_name_cap = "uni" + Strsub(ToString(UCodePoint(UnicodeFromName(glyph_name))), 2) + ".tab"
  glyph_name_cap = glyph_name + ".tab"
  if (InFont(glyph_name_cap))
   if (DrawsSomething(glyph_name_cap))
    AddPosSub("Tabular substitutions subtable", glyph_name_cap) 
   endif
  endif
 endif
endloop 

