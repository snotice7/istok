#
# This fontforge script proposed for copying left kerning info from first glyph to other ones
#

first_glyph = $1;
if ($argc < 2)
 return
endif

Select(first_glyph)
first_name = GlyphInfo("Name")

#SelectWorthOutputting()
SelectByPosSub("LGC kerning subtable",1)
i = 1
while ( i < $argc)
 if (InFont($argv[i]))
  SelectFewerSingletons($argv[i])
 endif
 i++
endloop
foreach
 kern = GlyphInfo ("Kern", first_name)
 if (kern != 0)
  i = 2
  while ( i < $argc)
   if ( WorthOutputting($argv[i]) )
    SetKern($argv[i],kern)
   endif
   i++
  endloop
  endif
endloop
 
SelectNone()

